<%- include('partials/header') %>

<div class="product-detail-container">
    <div class="breadcrumb">
        <a href="/<%= isAdmin ? '?admin=true' : '' %>">Home</a> / <span><%= item.nome %></span>
    </div>

    <div class="product-detail-content">
        <div class="product-detail-image">
            <img src="<%= item.imagem %>" alt="<%= item.nome %>">
        </div>
        <div class="product-detail-info">
            <span class="brand-tag"><%= item.marca %></span>
            <h1><%= item.nome %></h1>
            <p class="category-tag"><i class="fas fa-tag"></i> <%= item.esporte %></p>
            <p class="price-large">R$ <%= item.preco.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %></p>
            
            <div class="description">
                <h3>Descrição</h3>
                <p><%= item.descricao %></p>
            </div>

            <div class="stock-info">
                <p><i class="fas fa-box"></i> Estoque disponível: <strong><%= item.estoque %> unidades</strong></p>
            </div>

            <div class="actions">
                <button class="btn-buy">Comprar Agora</button>
                <% if (isAdmin) { %>
                    <a href="/admin/editar/<%= item.id %>?admin=true" class="btn-edit-admin">Editar Produto</a>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
